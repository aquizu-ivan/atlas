{
  "name": "@atlas/api",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "node src/server.js",
    "start": "node src/server.js",
    "smoke": "node -e \"console.log('api package ok')\"",
    "smoke:health": "node -e \"fetch('http://localhost:4000/api/health').then(r=>r.json()).then(j=>console.log(j.ok?'OK':'FAIL')).catch(e=>{console.error(e);process.exit(1)})\"",
    "prisma:validate": "pnpm exec -- prisma validate",
    "prisma:format": "pnpm exec -- prisma format",
    "db:generate": "pnpm exec -- prisma generate",
    "db:push": "pnpm exec -- prisma db push"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "prisma": "^5.0.0",
    "nodemon": "^3.1.0"
  }
}
