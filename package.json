{
  "name": "atlas",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "smoke:node": "node -v",
    "smoke:pnpm": "pnpm -v",
    "smoke": "pnpm run smoke:node && pnpm run smoke:pnpm",
    "ci:smoke": "pnpm run smoke && pnpm -r -w exec -- node -e \"console.log('workspace ok')\"",
    "repo:tree": "node scripts/repo-tree.cjs",
    "railway:build": "corepack pnpm --filter @atlas/api run db:generate",
    "railway:start": "corepack pnpm --filter @atlas/api run start",
    "qa:exhibicion": "node apps/api/src/scripts/qa-exhibicion-completa.cjs"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "prisma",
      "@prisma/client"
    ]
  }
}
